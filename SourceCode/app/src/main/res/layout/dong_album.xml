<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:id="@+id/linearlayoutcardviewalbum"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageviewalbum"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textviewtenalbum"
            android:maxWidth="200dp"
            android:textSize="20dp"
            android:textColor="#252525"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="Ngay xuan long phung xum vay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textviewtencasialbum"
            android:textColor="#6b6767"
            android:maxWidth="200dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Noo Phuoc Thinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</androidx.cardview.widget.CardView>