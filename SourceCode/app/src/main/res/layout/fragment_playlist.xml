<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/textviewtitleplaylist"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#2b2b2b"
        android:text="NHỊP ĐIỆU CẢM XÚC"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listviewplaylist"
        android:layout_below="@id/textviewtitleplaylist"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    <TextView
        android:id="@+id/textviewviewmoreplaylist"
        android:textSize="16sp"
        android:layout_below="@id/listviewplaylist"
        android:drawablePadding="10dp"
        android:paddingLeft="5dp"
        android:text="Xem thêm playlist"
        android:gravity="center"
        android:background="#b300ff"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="8dp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>