    <RelativeLayout
        android:id="@+id/relativebaihathot"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:text="CÓ THỂ BẠN SẼ THÍCH"
            android:textSize="20sp"
            android:textColor="#464646"
