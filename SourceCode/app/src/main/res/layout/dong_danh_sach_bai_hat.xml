<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:id="@+id/textviewdanhsachindex"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/textviewtenbaihat"
            android:textSize="20sp"
            android:text="Ten ca khuc"
            android:textColor="#2d2d2d"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/textviewtencasi"
            android:textColor="#6c6c6c"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewtenbaihat"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:text="Ten ca si"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/imageviewluotthichdanhsachbaihat"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/iconlove"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>